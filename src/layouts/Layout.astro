---
import { ClientRouter } from 'astro:transitions';
import '@/styles/global.css';
import { BottomTab } from '@/components/layout/BottomTab';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <title>{title} | FLOW</title>

    <!-- Google Fonts: M PLUS Rounded 1c -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <!-- アプリ風の遷移を実現 -->
    <ClientRouter />
  </head>

  <body
    class="touch-manipulation bg-gray-50 font-['M_PLUS_Rounded_1c',_sans-serif] text-gray-900 antialiased selection:bg-teal-100 selection:text-teal-900"
  >
    <!-- アプリのシェル: 画面高さ固定 -->
    <div class="relative mx-auto flex h-dvh max-w-md flex-col overflow-hidden bg-white shadow-xl">
      <!-- メインコンテンツ領域: スクロール制御は各ページに委譲 -->
      <main class="relative flex flex-1 flex-col overflow-hidden">
        <slot />
      </main>

      <BottomTab client:load transition:persist />
    </div>
  </body>
</html>
