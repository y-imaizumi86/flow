{
  "name": "flow",
  "type": "module",
  "version": "1.0.0",
  "description": "Simple, fast, ad-free expense tracker PWA.",
  "license": "MIT",
  "author": "Yuta Imaizumi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/y-imaizumi86/flow.git"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts,.tsx,.js,.jsx,.astro",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts,.tsx,.js,.jsx,.astro --fix",
    "stylelint": "stylelint '**/*.{css,scss,astro}'",
    "stylelint:fix": "stylelint '**/*.{css,scss,astro}' --fix",
    "format": "prettier --write .",
    "format:all": "npm run lint:fix && npm run stylelint:fix && npm run format",
    "db:migrate:local": "wrangler d1 migrations apply flow-db-prod --local",
    "db:migrate:prod": "wrangler d1 migrations apply flow-db-prod --remote"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/react": "^4.4.2",
    "@tailwindcss/vite": "^4.1.18",
